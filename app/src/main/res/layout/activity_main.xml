<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <FrameLayout
        android:id="@+id/container_round_info"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:elevation="20dp"
        app:layout_constraintTop_toTopOf="@+id/container_points"
        tools:layout_editor_absoluteX="0dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_round_finished"
        android:layout_width="match_parent"
        android:layout_height="660dp"
        android:elevation="10dp"
        app:layout_constraintTop_toBottomOf="@+id/container_round_info"
        tools:layout_editor_absoluteX="0dp">

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

    <Button
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Next"
        app:layout_constraintEnd_toEndOf="@+id/fl_img"
        app:layout_constraintTop_toBottomOf="@+id/fl_img" />

    <Button
        android:id="@+id/btn_back_in_bag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Back in bag"
        app:layout_constraintStart_toStartOf="@+id/fl_img"
        app:layout_constraintTop_toBottomOf="@+id/fl_img" />


    <Button
        android:id="@+id/btn_change_rules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:text="Rules"
        app:layout_constraintEnd_toEndOf="@+id/fl_img"
        app:layout_constraintTop_toBottomOf="@+id/fl_img" />

    <FrameLayout
        android:id="@+id/fl_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/container_buy">

        <ImageView
            android:id="@+id/no_item"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/no_item" />

        <ImageView
            android:id="@+id/img_current_item"
            android:layout_width="300dp"
            android:layout_height="300dp"
            app:srcCompat="@drawable/no_item" />


    </FrameLayout>


    <FrameLayout
        android:id="@+id/container_board"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="12dp"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="0dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_b"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="10dp"
        tools:layout_editor_absoluteX="-384dp"
        tools:layout_editor_absoluteY="-340dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_points"
        android:layout_width="match_parent"

        android:layout_height="match_parent"
        android:elevation="30dp">

    </FrameLayout>

    <FrameLayout
        android:id="@+id/container_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="5dp"
        tools:layout_editor_absoluteX="172dp"
        tools:layout_editor_absoluteY="625dp">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>