<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDDC39"
    tools:context=".Fragment_round_info" >

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvAnimals"
        android:layout_width="match_parent"
        android:layout_height="600dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/rvAnimals"
        tools:layout_editor_absoluteX="0dp">

        <View
            android:id="@+id/view"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_blue"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/blue_1" />

        <View
            android:id="@+id/view6"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_red"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/red_1" />

        <View
            android:id="@+id/view7"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_green"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/green_1" />

        <View
            android:id="@+id/view8"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_yellow"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/yellow_1" />

        <View
            android:id="@+id/view9"
            android:layout_width="10dp"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/img_purple"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/purple_1" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>