<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#72000000"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_buy_item"
            android:layout_width="117dp"
            android:layout_height="87dp"
            android:layout_marginStart="48dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="124dp"
            android:text="Buy items"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_take_points"
            android:layout_width="117dp"
            android:layout_height="87dp"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:text="Take the points"
            app:layout_constraintStart_toEndOf="@+id/btn_buy_item"
            app:layout_constraintTop_toTopOf="@+id/btn_buy_item" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="221dp"
            android:layout_height="239dp"
            android:layout_marginStart="28dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="@+id/btn_buy_item"
            app:layout_constraintTop_toBottomOf="@+id/btn_buy_item"
            app:srcCompat="@drawable/explosion" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>